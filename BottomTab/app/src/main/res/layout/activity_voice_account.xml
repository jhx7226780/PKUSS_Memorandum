<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skypan.bottomtab.VoiceAccountActivity">
    <FrameLayout
        android:id="@+id/va_Fralay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/va_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e7e7e7">


            <RelativeLayout
                android:id="@+id/va_top"
                android:layout_width="match_parent"

                android:layout_height="40dp"
                android:background="#d7d7d7">
                <Button
                    android:id="@+id/va_return"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="返回" />


                <RelativeLayout
                    android:id="@+id/va_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >



                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/va_type"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/va_top"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="按住说话 松开记账"
                    android:textSize="30sp"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/va_picture"
                android:layout_below="@+id/va_type"
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/voice"
                    android:scaleType="fitXY"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/va_input"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"

                >
                <Button
                    android:id="@+id/wa_safe_button"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/voice_button_shape"
                    android:textColor="#ffffff"
                    android:onClick="showToast"
                    android:layout_centerInParent="true"
                    android:text="点 我"
                    android:textSize="25sp"/>

            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
